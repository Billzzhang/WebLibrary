<!DOCTYPE html>
<html>
    <head>
        <title> Library </title>
    </head>
</head>
<body>
    <h1> Look Inna Book </h1>
    <h3> Search Books </h3>
    <h4> <%= link_to "All Books", books_path%></h4>
    <h4> <%= link_to "Add a Book", add_path%></h4>
    <%= form_tag("/search", method: "POST") do %>
        <div class="form-group">
        <%= label_tag :bookName, "Book Name:" %>
        <%= text_field_tag :bookName, "", class: "form-control" %>
        </div>
        <div class="form-group">
        <%= label_tag :authorName, "Author Name:" %>
        <%= text_field_tag :authorName, "", class: "form-control" %>
        </div>
        <div class="form-group">
        <%= label_tag :ISBN, "ISBN:" %>
        <%= text_field_tag :ISBN, "", class: "form-control" %>
        </div>
        <div class="form-group">
        <%= label_tag :genre, "Genre:" %>
        <%= text_field_tag :genre, "", class: "form-control" %>
        </div>
        <%= submit_tag("Search") %>
    <% end %>
</body>
</html>